<p id="notice"><%= notice %></p>

<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" type="text/css" href="bracket_css.css">
	</head>

	<% teamArray = Array.new %>
	<% @tournament.teams.each do |team| %>
		<% teamArray.push team %>
	<% end %>

	<h1><%= @tournament.Name %></h1>
	<main id="tournament">
		<ul class="round round-1">
			<li class="spacer">&nbsp;</li>
			
			<% i = 0 %>
			<% while i < 16 do %>

				<% if teamArray[i].blank? then %>
					<% teamArray[i] = "Bi Week" %>
					<li class="game game-top winner"><%= teamArray[i] %></li>
				<% else %>
					<li class="game game-top winner"><%= teamArray[i].Name %></li>
				<% end %>

				<li class="game game-spacer">&nbsp;</li>

				<% i = i+1 %>

				<% if teamArray[i].blank? then %>
					<% teamArray[i] = "Bi Week" %>
					<li class="game game-bottom "><%= teamArray[i] %> </li>
				<% else %>
					<li class="game game-bottom"><%= teamArray[i].Name %></li>
				<% end %>


				<% i = i+1 %>

				<li class="spacer">&nbsp;</li>

			<% end %>
			


			
		</ul>
		<ul class="round round-2">
			<li class="spacer">&nbsp;</li>
			
			<li class="game game-top winner">Lousville </li>
			<li class="game game-spacer">&nbsp;</li>
			<li class="game game-bottom ">Colo St </li>

			<li class="spacer">&nbsp;</li>
			
			<li class="game game-top winner">Oregon </li>
			<li class="game game-spacer">&nbsp;</li>
			<li class="game game-bottom ">Saint Louis </li>

			<li class="spacer">&nbsp;</li>
			
			<li class="game game-top ">Memphis </li>
			<li class="game game-spacer">&nbsp;</li>
			<li class="game game-bottom winner">Mich St </li>

			<li class="spacer">&nbsp;</li>
			
			<li class="game game-top ">Creighton </li>
			<li class="game game-spacer">&nbsp;</li>
			<li class="game game-bottom winner">Duke </li>

			<li class="spacer">&nbsp;</li>
		</ul>
		<ul class="round round-3">
			<li class="spacer">&nbsp;</li>
			
			<li class="game game-top winner">Lousville </li>
			<li class="game game-spacer">&nbsp;</li>
			<li class="game game-bottom ">Oregon </li>

			<li class="spacer">&nbsp;</li>
			
			<li class="game game-top ">Mich St </li>
			<li class="game game-spacer">&nbsp;</li>
			<li class="game game-bottom winner">Duke </li>

			<li class="spacer">&nbsp;</li>
		</ul>
		<ul class="round round-4">
			<li class="spacer">&nbsp;</li>
			
			<li class="game game-top winner">Lousville</li>
			<li class="game game-spacer">&nbsp;</li>
			<li class="game game-bottom ">Duke </li>
			
			<li class="spacer">&nbsp;</li>
		</ul>

		<ul class="round round-5">
			<li class="game game-top winner">Lousville</li>
		</ul>		
	</main>
	<table>
		<tbody>
			<tr>
	        	<td> <%= button_to 'Edit Tournament', edit_tournament_path(@tournament) %> </td>
	        	<td> <%= button_to 'Back', tournaments_path, :class => "button", :method => :get %> </td>
	        </tr>
	    </tbody>
	</table>

	<footer>
		<br> 
		<i>
			This HTML Layout was taken and altered from: <a href="http://codepen.io/anon/pen/pgJVRg"> http://codepen.io/anon/pen/pgJVRg</a>
		</i>
	</footer>
</html>